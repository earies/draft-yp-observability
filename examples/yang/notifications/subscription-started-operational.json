{
  "ietf-yp-lite-config:datastore-telemetry": {
    "filters": {
      "filter": [
        {
          "name": "interface-stats-filter",
          "path": "ietf-interfaces:interfaces/interface/statistics"
        }
      ]
    },
    "subscriptions": {
      "subscription": [
        {
          "name": "ExampleStatsSubscription",
          "target": {
            "datastore": "ietf-datastores:operational",
            "filter-ref": "interface-stats-filter"
          },
          "update-trigger": {
            "periodic": {
              "period": 3000,
              "anchor-time": "2025-01-01T00:00:00.00Z"
            }
          }
        }
      ]
    }
  }
}